generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// Usuario del sistema (no ejecutar migraciones todavía)
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique @db.VarChar(100)
  password  String   @db.VarChar(100)
  name      String?  @db.VarChar(100)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

/// Tipo de producto (categoría)
model ProductType {
  id          Int       @id @default(autoincrement())
  name        String    @db.VarChar(100)
  description String?   @db.VarChar(100)
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

/// Descuento aplicado a productos o combos
model Discount {
  id         Int       @id @default(autoincrement())
  porcentaje Int
  products   Product[]
  combos     Combo[]
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

/// Producto individual del catálogo
model Product {
  id            Int        @id @default(autoincrement())
  productTypeId Int
  discountId    Int?
  name          String     @db.VarChar(100)
  price         Decimal?   // Considera usar Decimal para precio; diagrama muestra varchar
  description   String?    @db.VarChar(100)
  image         Bytes
  productType   ProductType @relation(fields: [productTypeId], references: [id])
  discount      Discount?   @relation(fields: [discountId], references: [id])
  combos        Combo[]
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

/// Combo que agrupa un producto con posible descuento (si más de un producto se requiere tabla pivot en el futuro)
model Combo {
  id          Int       @id @default(autoincrement())
  productId   Int
  discountId  Int?
  nombre      String    @db.VarChar(100)
  product     Product   @relation(fields: [productId], references: [id])
  discount    Discount? @relation(fields: [discountId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
